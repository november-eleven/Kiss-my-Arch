Section "InputClass"
    Identifier "libinput touchpad catchall"
    MatchIsTouchpad "on"
    MatchDevicePath "/dev/input/event*"
    Driver "libinput"
    Option "Tapping" "on"
    Option "TappingDrag" "off"
    Option "TappingButtonMap" "lrm"
    Option "NaturalScrolling" "off"
    Option "ScrollMethod" "twofinger"
EndSection
