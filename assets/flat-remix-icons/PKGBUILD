pkgname=flat-remix-icons
pkgver=20190903
pkgrel=0
pkgdesc='Flat Remix icons'
arch=('any')
license=('GPL3')
url='https://github.com/daniruiz/flat-remix'
depends=('gtk-engine-murrine')
source=($pkgname::git+https://github.com/daniruiz/flat-remix.git)
sha256sums=('SKIP')

package() {

  cd "$pkgname"
  install -dm755 "${pkgdir}/usr/share/icons"
  cp -dr --no-preserve='ownership' Flat-Remix-Green "${pkgdir}/usr/share/icons"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

}
